{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "declaration": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "ts/types/*"
            ]
        }
    },
    "include": [
        "ts/**/*"
    ],
    "exclude": [
        "dts"
    ]
}